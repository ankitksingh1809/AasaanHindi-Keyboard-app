<Keyboard xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyHeight="7.25%p"
    app:keyWidth="12.5%p"
    app:horizontalGap="0.4%p"
    app:verticalGap="0.4%p"
    >

    <Row>
        <Key app:codes="49" app:keyLabel="1" app:keyEdgeFlags="left"/>
        <Key app:codes="50" app:keyLabel="2"/>
        <Key app:codes="51" app:keyLabel="3"/>
        <Key app:codes="52" app:keyLabel="4"/>
        <Key app:codes="53" app:keyLabel="5"/>
        <Key app:codes="54" app:keyLabel="6"/>
        <Key app:codes="55" app:keyLabel="7"/>
        <Key app:codes="56" app:keyLabel="8"/>
        <Key app:codes="57" app:keyLabel="9"/>
        <Key app:codes="48" app:keyLabel="0" app:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key app:codes="64" app:keyLabel="\@" app:keyEdgeFlags="left"/>
        <Key app:codes="35" app:keyLabel="\#"/>
        <Key app:codes="0x20B9" app:keyLabel="₹"/>
        <Key app:codes="95" app:keyLabel="_"/>
        <Key app:codes="38" app:keyLabel="&amp;"/>
        <Key app:codes="45" app:keyLabel="-"/>
        <Key app:codes="43" app:keyLabel="+"/>
        <Key app:codes="40" app:keyLabel="("/>
        <Key app:codes="41" app:keyLabel=")" />
        <Key app:codes="47" app:keyLabel="/" app:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key app:codes="-2"
            app:keyLabel="@string/alphabet" app:keyEdgeFlags="left"/>
        <Key app:codes="42" app:keyLabel="*"/>
        <Key app:codes="34" app:keyLabel="&quot;"/>
        <Key app:codes="39" app:keyLabel="\'"/>
        <Key app:codes="58" app:keyLabel=":"/>
        <Key app:codes="59" app:keyLabel=";"/>

        <Key app:codes="33" app:keyLabel="!" />
        <Key app:codes="63" app:keyLabel="\?"/>
        <Key app:codes="-5" app:keyLabel="⌫" app:keyEdgeFlags="right"
            app:isRepeatable="true"/>
    </Row>

    <Row  app:rowEdgeFlags="bottom">
        <Key app:codes="-7" app:keyLabel="कखग"/>

        <Key
            app:codes="44"
            app:keyLabel="," />
        <Key app:codes="32"
            app:keyLabel = " "
            />
        <Key app:codes="46" app:keyLabel="."/>
        <Key app:codes="10" app:keyIcon="@drawable/sym_keyboard_return"
            app:keyEdgeFlags="right"
            />
    </Row>
</Keyboard>